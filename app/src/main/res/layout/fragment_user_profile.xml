<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="30dp"
        tools:context=".ProfileFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_Profile"
            android:layout_width="match_parent"
            android:layout_height="216dp"
            app:cardBackgroundColor="#00ACEC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="44dp"
                    android:text="Profile"
                    android:textColor="#fff"
                    android:textSize="34sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="136dp"
            android:elevation="20dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="@+id/card_Profile"
            app:layout_constraintStart_toStartOf="@+id/card_Profile"
            app:layout_constraintTop_toTopOf="@+id/card_Profile">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.rishabhharit.roundedimageview.RoundedImageView
                        android:id="@+id/imgUserProfile"
                        android:layout_width="80dp"
                        android:layout_height="80dp"

                        android:layout_marginStart="19dp"
                        android:layout_marginTop="17dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_interface"
                        app:cornerRadius="150dp"
                        app:roundedCorners="all" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvUserNameProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="35dp"
                            android:textColor="#202020"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tvEmailProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:textSize="17sp" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="12dp"
                    android:background="#D8D8D8" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/btnEditU"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_edit"
            android:drawableEnd="@drawable/ic_chevron"
            android:drawablePadding="15dp"
            android:drawableTint="@color/color_gray"
            android:padding="15dp"
            android:text="Edit"
            android:textColor="#656565"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />


        <TextView
            android:id="@+id/btnLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/ic_location"
            android:drawableEnd="@drawable/ic_chevron"
            android:drawablePadding="15dp"
            android:drawableTint="@color/color_gray"
            android:padding="15dp"
            android:text="Location"
            android:textColor="#656565"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/btnOder"
            app:layout_constraintStart_toStartOf="@+id/btnOder"
            app:layout_constraintTop_toBottomOf="@+id/btnOder" />

        <TextView
            android:id="@+id/btnOder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/ic_reorder"
            android:drawableEnd="@drawable/ic_chevron"
            android:drawablePadding="15dp"
            android:drawableTint="@color/color_gray"
            android:padding="15dp"
            android:text="Oder's"
            android:textColor="#656565"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="@+id/btnEditU"
            app:layout_constraintTop_toBottomOf="@+id/btnEditU" />


        <TextView
            android:id="@+id/btnLogOutU"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:drawableStart="@drawable/ic_exit"
            android:drawablePadding="15dp"
            android:drawableTint="@color/color_gray"
            android:padding="15dp"
            android:text="LogOut"
            android:textColor="#656565"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/btnLocation"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/btnLocation"
            app:layout_constraintTop_toBottomOf="@+id/btnLocation" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>

