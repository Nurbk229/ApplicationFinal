<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.cielyang.android.clearableedittext.ClearableEditText
            android:id="@+id/txtCurrentPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_setting"
            android:elevation="10dp"
            android:hint="Current Password"
            android:inputType="textPassword"
            android:padding="15dp"
            app:clearIconDrawWhenFocused="false"
            app:clearIconDrawable="@drawable/ic_clear" />


        <com.cielyang.android.clearableedittext.ClearableEditText
            android:id="@+id/txtNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_setting"
            android:elevation="10dp"
            android:hint="New Password"
            android:inputType="textPassword"
            android:padding="15dp"
            app:clearIconDrawWhenFocused="false"
            app:clearIconDrawable="@drawable/ic_clear"

            />

        <com.cielyang.android.clearableedittext.ClearableEditText
            android:id="@+id/txtAgainPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_setting"
            android:elevation="10dp"
            android:hint="New Password, again"
            android:inputType="textPassword"
            android:padding="15dp"
            app:clearIconDrawWhenFocused="false"
            app:clearIconDrawable="@drawable/ic_clear"

            />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>