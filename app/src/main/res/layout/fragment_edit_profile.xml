<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/containerPhotoProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:src="@drawable/ic_interface" />

        <TextView
            android:id="@+id/btnChangeContainerPhotoProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Edit profile Photo"
            android:textSize="18sp"

            />

        <com.cielyang.android.clearableedittext.ClearableEditText
            android:id="@+id/txtEditNameProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_setting"
            android:elevation="10dp"
            android:hint="Name"
            android:inputType="textPersonName"
            android:maxLength="18"
            android:padding="17dp"
            android:textSize="16sp"
            app:clearIconDrawWhenFocused="false"
            app:clearIconDrawable="@drawable/ic_clear" />


        <com.cielyang.android.clearableedittext.ClearableEditText
            android:id="@+id/txtEditPhoneProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_setting"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:hint="Phone"
            android:inputType="number"
            android:maxLength="10"
            android:padding="17dp"
            android:textSize="16sp"
            app:clearIconDrawWhenFocused="false"
            app:clearIconDrawable="@drawable/ic_clear" />

        <com.cielyang.android.clearableedittext.ClearableEditText
            android:id="@+id/txtEditEmailProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/bg_setting"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="17dp"
            android:textSize="16sp"
            app:clearIconDrawWhenFocused="false"
            app:clearIconDrawable="@drawable/ic_clear" />

        <com.cielyang.android.clearableedittext.ClearableEditText
            android:id="@+id/txtEditDescriptionProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bg_setting"
            android:elevation="10dp"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:maxLength="200"
            android:maxLines="8"
            android:padding="17dp"
            android:text=""
            android:textSize="16sp"
            android:visibility="gone"
            app:clearIconDrawWhenFocused="false"
            app:clearIconDrawable="@drawable/ic_clear" />


    </LinearLayout>
</androidx.core.widget.NestedScrollView>